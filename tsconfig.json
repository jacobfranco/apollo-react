{
  "compilerOptions": {
    "baseUrl": "./",
    "outDir": "dist",
    "sourceMap": true,
    "strict": true,
    "module": "ESNext",
    "lib": ["ESNext", "DOM"],
    "target": "ESNext",
    "jsx": "react",
    "allowJs": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "paths": {
      "src/*": ["src/*"] 
    },
    "typeRoots": [
      "./src/types",
      "./node_modules/@types",
      "./node_modules"
    ],
    "types": [
      "vite/client",
      "vitest/globals",
      "vite-plugin-compile-time/client",
      "@webbtc/webln-types"
    ]
  }
}